@model Demo.ViewModels.ScoreboardPointType

<div class="transbox2 navbar center">
    <div class="transbox2Title">
        Scoreboards
    </div>
    <ul>
        @{
            bool isTotal = true;
            string className = "navItem";
        }

        @foreach (var item in Model.PointTypes)
        {
            if (item.Name == Model.SelectedPointType) 
            { 
                className += " currentScoreboard";
                isTotal = false;
            }
            
            <li class="@className">
                <p>
                    @Html.ActionLink(item.Name,"Index", "Scoreboard",  new { pointType = item.Name }, new { })
                </p>
            </li>
            
            className = "navItem";
        }

        @if (isTotal)
        {
            className += " currentScoreboard";
        }

        <li class="@className">
            <p>
                @Html.ActionLink("Totals", "Index", "Scoreboard", new { pointType = "" }, new { })
            </p>
        </li>
    </ul>
</div>