<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header id="header">

        <div class="backgroundImages">
            <div class="bgBackground">
                <img id="background" src="@Url.Content("~/Content/Images/powercat background-small.jpg")"/>
            </div>
        </div>

        <div class="backgroundImages">
            <div class="bgBanner">
                <img id="banner" src="@Url.Content("~/Content/Images/banner-small2.jpg")"/>
            </div>
        </div>

        <nav class="top_menu">
        <ul>
          @if(User.IsInRole("Administrator")){ <li>@Html.ActionLink("Manage Users", "Index", "Users")</li> }
        </ul>
      </nav>

        <div>
            <!-- Search -->
        </div>
    </header>

    
    
    <div id="content">
        @RenderBody()
    </div>

    <footer id="footer">
        <!-- Might put a site map here. -->
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
